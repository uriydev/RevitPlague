<Page 
    x:Class="RevitPlague.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:RevitPlague.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:HomeViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d"
    >
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <ui:DynamicScrollViewer>
        
        <VirtualizingStackPanel
            Margin="12"
            IsVirtualizing="True"
            VirtualizationMode="Recycling"
            TextBlock.FontWeight="Medium">
            <TextBlock
                FontSize="16"
                Text="Modules" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,8,4,0"
                    Icon="{ui:SymbolIcon Image24}"
                    CommandParameter="view"
                    Command="{Binding  DeleteInstancesCommand}">
                    <StackPanel>
                        <TextBlock
                            FontWeight="Medium"
                            Text="Delete Elems" />
                    </StackPanel>
                </ui:CardAction>
                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="4,8,4,0"
                    Icon="{ui:SymbolIcon Document24}"
                    CommandParameter="document">
                    <StackPanel>
                        <TextBlock
                            FontWeight="Medium"
                            Text="Module" />
                    </StackPanel>
                </ui:CardAction>
                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="4,8,4,0"
                    Icon="{ui:SymbolIcon Apps24}"
                    CommandParameter="application">
                    <StackPanel>
                        <TextBlock
                            FontWeight="Medium"
                            Text="Module" />
                    </StackPanel>
                </ui:CardAction>
                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="4,8,0,0"
                    Icon="{ui:SymbolIcon WindowApps24}"
                    CommandParameter="uiApplication">
                    <StackPanel>
                        <TextBlock
                            FontWeight="Medium"
                            Text="Module" />
                    </StackPanel>
                </ui:CardAction>
            </Grid>
            
        </VirtualizingStackPanel>
        
    </ui:DynamicScrollViewer>
    
</Page>